pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds') // Set up in Jenkins
        DOCKERHUB_USER = 'your-dockerhub-username'
        DOCKERHUB_REPO = 'your-dockerhub-repo'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Build Docker Images') {
            steps {
                sh 'docker-compose build'
            }
        }
        stage('Test') {
            steps {
                // Add your test commands here, e.g.:
                // dir('backend') { sh 'npm test' }
                // dir('frontend') { sh 'npm test' }
            }
        }
        stage('Push Images') {
            when {
                branch 'main'
            }
            steps {
                sh "echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_USER --password-stdin"
                sh "docker tag dazzle-store-studio-frontend $DOCKERHUB_USER/$DOCKERHUB_REPO-frontend:latest"
                sh "docker tag dazzle-store-studio-backend $DOCKERHUB_USER/$DOCKERHUB_REPO-backend:latest"
                sh "docker push $DOCKERHUB_USER/$DOCKERHUB_REPO-frontend:latest"
                sh "docker push $DOCKERHUB_USER/$DOCKERHUB_REPO-backend:latest"
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose down'
                sh 'docker-compose up -d'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}